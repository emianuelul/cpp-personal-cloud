import { MyButton } from "my_button.slint";
import {
    Button,
    LineEdit,
    HorizontalBox,
    VerticalBox,
} from "std-widgets.slint";
export component MainPage inherits Rectangle {
    callback get(string);
    callback post(string);
    callback logout();
    callback open-file-select();

    in-out property <[string]> files: [];

    background: white;

    VerticalBox {
        alignment: center;
        HorizontalBox {
            alignment: center;
            padding: 10px;
            Rectangle {
                width: 350px;
                background: rgba(22, 32, 64, 0.8);
                border-radius: 30px;

                VerticalLayout {
                    spacing: 15px;
                    padding: 14px;
                    MyButton {
                        text: "Get";
                        clicked => {
                            get("file-name");
                        }
                    }

                    MyButton {
                        text: "Post";
                        clicked => {
                            post("file-name");
                        }
                    }

                    MyButton {
                        text: "Log Out";
                        clicked => {
                            logout();
                        }
                    }

                    MyButton {
                        text: "Open File Select";
                        clicked => {
                            open-file-select();
                        }
                    }
                }
            }
        }
    }
}
